modules = ["web", "swift-5.8", "dart-3.10"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["jq", "unzip", "flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && dart run serve.dart"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
publicDir = "build/web"
run = ["bash", "-c", "cd /home/runner/workspace && dart run serve.dart"]
build = ["bash", "-c", "cd /home/runner/workspace && flutter build web --release --base-href /"]
